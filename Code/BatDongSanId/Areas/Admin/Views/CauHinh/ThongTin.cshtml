@model BatDongSanId.Areas.Admin.Models.ViewModel.MenuViewModel
@{
    ViewData["Title"] = "ThongTin";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Chỉnh sửa thông tin</h1>
<div class="row">
    <div class="col-md-12">
        <form asp-action="ThongTin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.Fanpage.ID" />
            <div class="form-group">
                <label class="control-label">Fanpage</label>
                <input asp-for="@Model.Fanpage.DuLieuString" class="form-control" />
                <span asp-validation-for="@Model.Fanpage.DuLieuString" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu thông tin" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


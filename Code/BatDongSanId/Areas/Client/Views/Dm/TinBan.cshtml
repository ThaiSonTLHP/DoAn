@model X.PagedList.IPagedList<BatDongSanId.Areas.Client.Models.ViewModels.TinBDSViewModel>
@using X.PagedList.Mvc.Core;
@using X.PagedList.Mvc.Core.Common;
@{ ViewData["Title"] = "Trang chủ";
    Layout = "~/Areas/Client/Views/Shared/_Layout.cshtml"; }

@{ ViewData["Title"] = "Tin bán"; }



<section class="hotel-rooms spad" style="padding-top:0px;">
    <div class="container card">
        <div class="row card-header">Tin bán</div>
        <div class="row card-body">
            @foreach (var tin in Model)
            {
                <div class="col-lg-6 col-xl-6">
                    <div class="room-items">
                        <div class="row" style="margin:5px">
                            <div class="room-img set-bg col-md-3" data-setbg="@Html.Raw(tin.HinhAnh)">
                                <form>
                                    <button id="@Html.Raw(tin.HinhAnh)" class="room-content border-0" style="background-color: transparent" data="@tin.ID">
                                        <i class="flaticon-heart"></i>
                                    </button>
                                </form>
                            </div>
                            <div class="room-text col-md-9" style="padding-top:0px;padding-bottom:0px;">
                                <div class="room-details" style="padding-bottom:0px;">
                                    <div class="room-title">
                                        <a asp-controller="Dm" asp-action="ChiTietTinBDS" asp-route-id="@Html.Raw(tin.ID)" style="font-size:14px">@Html.Raw(tin.MoTa)</a>
                                        <br />
                                        <a href="#">
                                            <i class="flaticon-placeholder"></i> <span>@Html.Raw(tin.QuanHuyen) | @Html.Raw(tin.TinhThanh)</span>
                                        </a>
                                        <a href="#" class="large-width">
                                            <i class="flaticon-timer"></i><span>@Html.Raw(tin.NgayDang)</span>
                                        </a>
                                    </div>
                                </div>
                                <div class="room-features" style="padding-bottom:0px;margin-bottom:0px;">
                                    <div class="room-info">
                                        <div class="size">
                                            <p>Diện tích: @Html.Raw(tin.DienTich) m2 | Hướng:@Html.Raw(tin.Huong) |</p>
                                        </div>
                                        <div class="beds">
                                            
                                        </div>
                                        <div class="garage">
                                            @if (Html.Raw(tin.XacThuc).ToString() == "Xác thực")
                                            {<p>Xác thực: Xác thực</p>}
                                            else
                                            {<p>Xác thực: Chưa</p>}
                                        </div>
                                        <br />
                                        <div class="size">
                                            <p>@Html.Raw(tin.LoaiTin) : @Html.Raw(tin.Gia)</p>
                                        </div>
                                        <div class="beds">
                                            <p>Liên hệ: @Html.Raw(tin.LienHe)</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>      
            }
        </div>
    </div>
</section>

<!-- Thêm mã phân trang -->
<br />
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("TinBan", new { page, @class = "page-item" }),
    new PagedListRenderOptions
    {
        LiElementClasses = new string[] { "page-item" },
        PageClasses = new string[] { "page-link" }
    })

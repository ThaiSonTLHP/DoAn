            <div class="form-group">
                <input asp-for="Huong" class="form-control" placeholder="Hướng"/>
                <span asp-validation-for="Huong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="MoTa" class="form-control" placeholder="Mô tả"/>
                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Đăng tin" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

